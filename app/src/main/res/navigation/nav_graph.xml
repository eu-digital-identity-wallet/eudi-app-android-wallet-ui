<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/WalletFragment">

    <fragment
        android:id="@+id/WalletFragment"
        android:name="eu.europa.ec.eudi.wallet.ui.wallet.WalletFragment"
        android:label="@string/eudi_wallet_ui"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/action_WalletFragment_to_ShareFragment"
            app:popUpTo="@id/WalletFragment"
            app:destination="@id/ShareFragment" />
        <action
            android:id="@+id/action_WalletFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/ShareFragment"
        android:name="eu.europa.ec.eudi.wallet.ui.share.ShareFragment"
        tools:layout="@layout/fragment_share">
        <action
            android:id="@+id/action_ShareFragment_to_transferFragment"
            app:destination="@id/TransferFragment"
            app:popUpTo="@id/ShareFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/TransferFragment"
        android:name="eu.europa.ec.eudi.wallet.ui.transfer.TransferFragment"
        tools:layout="@layout/fragment_transfer">
        <action
            android:id="@+id/navigateToSelectiveDisclosure"
            app:destination="@id/SelectiveDisclosureDialog"
            app:popUpTo="@id/TransferFragment" />
    </fragment>

    <dialog
        android:id="@+id/SelectiveDisclosureDialog"
        android:name="eu.europa.ec.eudi.wallet.ui.selectivedisclosure.SelectiveDisclosureFragment">

        <argument
            android:name="request"
            app:argType="eu.europa.ec.eudi.iso18013.transfer.Request" />
    </dialog>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="eu.europa.ec.eudi.wallet.ui.detail.DetailFragment"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="documentIdentityCredentialName"
            app:argType="string" />
    </fragment>

</navigation>